<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title><%- title %></title>
		<%- include("components/importer")%>
	</head>
	<body>
		<div data-role="page">
			<div class="banner" style="margin-bottom:-5px;">
				<div class=" ui-grid-solo ui-responsive">
					<div class="ui-block-a">
						<img src="images/bg-pub-dest-1.png" id="img-banner"/>
					</div>
				</div>
				<a href="/login" class="ui-btn-left banner-controls">left</a>
				<a href="#" class="ui-btn-right banner-controls">right</a>
			</div>
			<%- include("./components/menu", {eventos})%>
			<div data-role="main">
				<div class="painels">
					<% normalize.forEach((vetorEventos, i) =>{ %>
					<div class="ui-grid-b ui-responsive">
						<% vetorEventos.forEach((registro, index) =>{ %>
						<%if(registro.publicado){%>
						<div class="ui-block-<%= typeGride[index]%> eventos">
							<div class="painel-eventos">
								<div class="painel-header">
									
									<% if(registro.imgMed){%>
									<img src="<%= registro.imgMed %>" alt="image nao disponivel" class="responsive-image" >
									<% } else{%>
									<img src="images/bg-pub-1.png" alt="esta imagen sempre estara disponivel" class="responsive-image" >
									<%}%>
									
									<h1 class="" style="padding-top:10px;margin:0;"><%=registro.evento%></h1>
								</div>
								<div class="painel-body">
									<p><%= registro.descricao %></p>
								</div>
								<div class="painel-footer">
									<div class="ui-grid-a ui-responsive">
										<div class="ui-block-a">
											<a href="/comprar/<%= registro.evento %>/<%= registro.id %>" class="ui-btn ui-corner-all ui-btn-active ui-mini">obter convite</a>
										</div>
										<div class="ui-block-b"></div>
									</div>
								</div>
							</div>
						</div>
						<%}%>
						<% })%>
					</div>
					<%}) %>
				</div>
			</div>
			<%- include("./components/rodape")%>
			<script type="text/javascript" src="javascripts/banner.js"></script>
			<script type="text/javascript" src="javascripts/menu-configs.js"></script>
			<script>
				alerta("info",{msg:"a tela de <%= subtitle %> da <%= title%> ", destaque:"Bem vindo! "}).show(7000);
			</script>
		</div>
	</body>
</html>